<%-include('header')%>

<style>
    #wrapper{
        overflow: visible;
    }
</style>
                        <div class="row">
                            <h2 style="transform: translate(265px, 65px);">Profile</h2>
                            <div class="col-lg-4 col-xl-4" style="transform: translate(550px, 140px);">
                                <div class="card-box text-center" >
                                    <img src="<%=locals.user.adminImage%>" class="rounded-circle avatar-lg img-thumbnail"
                                        alt="profile-image" style="height: 150px; width: 150px;">

                                    <h4 class="mb-0"><%=locals.user.name%></h4>

                                    
                                    <div class="text-center mt-3">
                                        <p class="text-muted mb-1 font-13"><strong>Full Name :</strong> <span class="ml-2"><%=locals.user.name%></span></p>
                                        <p class="text-muted mb-1 font-13"><strong>Email :</strong> <span class="ml-2 "><%=locals.user.email%></span></p>
                                        <p class="text-muted mb-1 font-13"><strong>Location :</strong> <span class="ml-2"><%=locals.user.city%></span></p>
                                        <p class="text-muted font-13 mb-1"><strong>Hobby :</strong> <span class="ml-2"><%=locals.user.hobby%></span></p>
                                        <p class="text-muted font-13 mb-1"><strong>Description :</strong> <span class="ml-2"><%=locals.user.description%></span></p>
                                    </div>
                                    <button type="button" class="btn btn-success btn-xs waves-effect my-2 waves-light"><a href="/admin/editProfile/<%=locals.user._id%>" style="text-decoration: none; color: aliceblue;">Edit</a></button>
                                </div><!-- end card-box-->

                            </div>
                        </div>
                        <!-- end row-->

                    </div> <!-- container -->

                </div> <!-- content -->

            <%-include('footer')%>