<%-include('header')%>
<style>
    .product-box .product-action{
   padding:  0.5rem 0.5rem 0 1.5rem ;
}
.head , .active{
        color: #00acc1 !important;
}
</style>
            <div class="content-page">
                <div class="content">

                    <!-- Start Content-->
                    <div class="container-fluid">
                        
                        <!-- start page title -->
                        <div class="row">
                            <div class="col-12">
                                <div class="page-title-box">
                                    <div class="page-title-right">
                                        <ol class="breadcrumb m-0">
                                            <li class="breadcrumb-item"><a href="/admin/dashboard">Menu</a></li>
                                            <li class="breadcrumb-item active">View Product</li>
                                        </ol>
                                    </div>
                                    <h4 class="page-title">View Admin</h4>
                                </div>
                            </div>
                        </div>     
                        <!-- end page title --> 

                        <div class="row">
                            <div class="col-12">
                                <div class="card-box">
                                    <div class="row">
                                        <div class="col-lg-8" style="height: 70px;">
                                            <form class="form-inline">
                                                <div class="form-group">
                                                    <form>
                                                        <label for="inputPassword2" class="sr-only">Search</label>
                                                        <input type="search" class="form-control" id="inputPassword2" placeholder="Search..." name="search" value="<%=searchValue%>">
                                                        <button type="submit" title="Click here to search" value="search" style="border: none; background-color: #f5f6f8 !important;
                                                            transform: translateX(-30px); font-size: 16px; color: #6c757d;"><i class="fe-search"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                                <div class="form-group mx-sm-3" style="width: 150px; transform: translate(270px, -66px)">
                                                    <label for="status-select" class="mr-2" style="transform: translate(-58px, 36px); font-weight: 500;">Sort By</label>
                                                    <select class="custom-select" id="status-select">
                                                        <option selected="">All</option>
                                                        <option value="1">Popular</option>
                                                        <option value="2">Price Low</option>
                                                        <option value="3">Price High</option>
                                                        <option value="4">Sold Out</option>
                                                    </select>
                                                </div>
                                            </form>
                                        </div>
                                        <div class="col-lg-4">
                                            <div class="text-lg-right mt-3 mt-lg-0">
                                                <!-- <button type="button" class="btn btn-success waves-effect waves-light mr-1"><i class="mdi mdi-cog"></i></button> -->
                                                <a href="/admin/product/AddProduct" class="btn btn-danger waves-effect waves-light"><i class="mdi mdi-plus-circle mr-1"></i> Add Admin</a>
                                            </div>
                                        </div><!-- end col-->
                                    </div> <!-- end row -->
                                </div> <!-- end card-box -->
                            </div> <!-- end col-->
                        </div>
                        <!-- end row-->

                        <div class="row">
                            <%if(productData != ''){%>
                            <%for(var ad of productData){%>
                                <div class="col-md-6 col-xl-3">
                                    <div class="card-box product-box">

                                        <div class="product-action">
                                            <%if(ad.isActive){%>
                                            <a href="/admin/product/isActive/<%=ad.id%>" title="IsActive" class="btn btn-success btn-xs waves-effect waves-light" style="border-radius: 45%;"><i class="mdi mdi-airplane"></i></a>
                                            <%} else{%>
                                            <a href="/admin/product/deActive/<%=ad.id%>" title="DeActive" class="btn btn-success btn-xs waves-effect waves-light" style="border-radius: 45%;"><i class="mdi mdi-airplane-off"></i></a>
                                            <%}%>
                                            <a href="/admin/product/updateProduct/<%=ad.id%>" title="Edit Data" class="btn btn-success btn-xs waves-effect waves-light" style="border-radius: 45%;"><i class="mdi mdi-pencil"></i></a>
                                            <a href="/admin/product/deletProduct/<%=ad.id%>" title="Delet Data" class="btn btn-danger btn-xs waves-effect waves-light" style="border-radius: 45%;"><i class="mdi mdi-close"></i></a>
                                        </div>

                                        <div class="bg-light text-center">
                                            <img src="<%=ad.productImage%>" alt="product-pic" class="img-fluid" style="border-radius: 50%; height: 300px !important;"/>
                                        </div>

                                        <div class="product-info">
                                            <div class="row align-items-center">
                                                <div class="col ">
                                                    <h3 class="font-20 mt-0 sp-line-1"><a href="ecommerce-product-detail.html" class="text-dark"><%=ad.title%></a></h3>
                                                    <span class="text-dark fs-2 "><strong class="head"><%= 'Category'%> :</strong> <%=ad.category.cateName%></span><br>
                                                    <span class="text-dark fs-3 "><strong class="head"><%= 'Sub Category'%> :</strong> <%=ad.subcategory.scateName%></span><br>
                                                    <span class="text-dark fs-4 "><strong class="head"><%= 'Extra Category'%> :</strong> <%=ad.extracategory.ecateName%></span><br>
                                                    <span class="text-dark fs-5 "><strong class="head"><%= 'Brand'%> :</strong> <%=ad.brandname.brandname%></span><br>
                                                    <span class="text-dark fs-6 "><strong class="head"><%= 'Type'%> :</strong> <%=ad.typename.typeName%></span><br>
                                                    <span class="text-dark fs-6 "><strong class="head"><%= 'Color'%> :</strong> <%=ad.color%></span><br>
                                                    <span class="text-dark fs-6 "><strong class="head"><%= 'Price'%> :</strong> ₹<%=ad.price%></span>&nbsp;&nbsp;&nbsp;<br>
                                                    <span class="text-dark fs-6 "><strong class="head"><%= 'Old Price'%> :</strong> <del>₹<%=ad.oldprice%></del></span><br>
                                                    <span class="text-dark fs-6 "><strong class="head"><%= 'Description'%> :</strong> <%=ad.description.slice(0,50)%></span><br>
                                                </div>
                                            </div> <!-- end row -->
                                        </div> <!-- end product info-->
                                        <div class="text-center mt-2">
                                            <a href="/admin/product/viewmore/<%=ad.id%>" class="btn-blue px-2 py-1 rounded-pill">View More</a>
                                        </div>
                                    </div> 
                                </div>
                            <%}%>
                            <%} else{%>
                                <div style="background-color: #fff !important; text-align: center; display: flex; justify-content: center; align-items: center; width: 100%; height: 70px;" >
                                    <h4 style="color: #6c757d;">No Record Found</h4>
                                </div>
                            <%}%>
                        </div>
                        <!-- end row-->

                        <div class="row">
                            <div class="col-12">
                                <ul class="pagination pagination-rounded justify-content-end mb-3">
                                    <li class="page-item">
                                        <% var prevPage = parseInt(currentPage)-1%>
                                        <% if(prevPage>=0){%>
                                            <a class="page-link" href="?page=<%=prevPage%>" aria-label="Previous">
                                                <span aria-hidden="true">«</span>
                                                <span class="sr-only">Previous</span>
                                            </a>
                                        <%}%>
                                    </li>
                                    <%var actv = 'active';%>
                                    <%for (var i=0; i<totaldocument; i++){%>
                                        <li class="page-item <%if(currentPage==i){%> <%=actv%> <%}%>"><a class="page-link" href="?page=<%=i%>&search=<%=searchValue%>"><%=i+1%></a></li>
                                    <%}%>
                                    <% var nextPage = parseInt(currentPage)+1%>
                                    <li class="page-item">
                                        <% if (totaldocument>nextPage){%>
                                            <a class="page-link" href="?page=<%=nextPage%>" aria-label="Next">
                                                <span aria-hidden="true">»</span>
                                                <span class="sr-only">Next</span>
                                            </a>
                                        <%}%>
                                        </li>
                                </ul>
                            </div> <!-- end col-->
                        </div>
                        <!-- end row-->
                        
                    </div> <!-- container -->

                </div> <!-- content -->


<%-include('footer')%>